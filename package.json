{
  "private": false,
  "version": "0.2.0",
  "description": "A TypeScript library that provides automatic mocking utilities for Bun's test framework, enabling easy creation of type-safe mocks for complex objects and nested structures.",
  "author": "Juan Bigorra <opensource@juanbigorra.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbigorra/bun-automock.git"
  },
  "keywords": [
    "bun",
    "automock",
    "mocking",
    "testing",
    "typescript"
  ],
  "homepage": "https://github.com/jbigorra/bun-automock",
  "bugs": {
    "url": "https://github.com/jbigorra/bun-automock/issues"
  },
  "engines": {
    "bun": ">=1.2.21"
  },
  "name": "bun-automock",
  "module": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "bun.lock",
    "package.json",
    ".bun-version"
  ],
  "scripts": {
    "test": "bun test",
    "tdd": "bun test --watch",
    "clean": "rm -rf dist coverage",
    "test:coverage": "bun test --coverage",
    "build": "rm -rf dist && bun build.ts && bun run build:types",
    "build:types": "tsc --noEmit false --emitDeclarationOnly --declaration --declarationMap"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
