{
  "private": false,
  "version": "0.2.2",
  "description": "A TypeScript library that provides automatic mocking utilities for Bun's test framework, enabling easy creation of type-safe mocks for complex objects and nested structures.",
  "author": "Juan Bigorra <opensource@juanbigorra.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbigorra/bun-automock.git"
  },
  "keywords": [
    "bun",
    "automock",
    "mocking",
    "testing",
    "typescript"
  ],
  "homepage": "https://github.com/jbigorra/bun-automock",
  "bugs": {
    "url": "https://github.com/jbigorra/bun-automock/issues"
  },
  "engines": {
    "bun": ">=1.2.21"
  },
  "name": "bun-automock",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "bun.lock",
    "package.json",
    ".bun-version"
  ],
  "scripts": {
    "test": "bun test",
    "tdd": "bun test --watch",
    "clean": "rm -rf dist coverage",
    "test:coverage": "bun test --coverage",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "build:types": "tsc --project tsconfig.dts.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
